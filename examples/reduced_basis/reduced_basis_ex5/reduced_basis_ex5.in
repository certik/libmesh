# ========= Main function parameters =========

x_size = 1.
y_size = 0.2

n_elem_x = 50
n_elem_y = 10

store_basis_functions = true   # Do we store the basis functions in the offline_data directory once Offline finishes?

online_mu = '0.5 0.5 -0.5'     # Parameter vector for an Online solve

# ========= RB system parameters =========

Nmax = 15                      # The maximum number of basis functions we can generate in the Offline stage
training_tolerance = 1.e-3

n_parameters = 3               # The number of parameters in the problem

mu_min = '0.5 -1. -1.'         # The "lower corner" of the parameter domain
mu_max = '2    1.  1.'         # The "upper corner" of the parameter domain
log_scaling = '1 0 0'          # Generate a training set with uniform (0) or logarithmic (1) scaling in each parameter

deterministic_training = false       # Are the training points generated randomly or deterministically
use_relative_bound_in_greedy = true  # Do we use a relative or absolute error bound when training the RB space?

n_training_samples = 100             # The number of parameters in training set
